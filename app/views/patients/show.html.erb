<h1>Patient: <%= @patient.name %></h1>
<h2> <%= @patient.age %></h2>
<div>
  <h4>Appointments:</h4>
  <% @patient.appointments.each do |appt| %>
    <p>Date/Time: <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></p>
    <p>Doctor: <%= link_to appt.doctor.name, doctor_path(appt.doctor) %></p>
  <% end %>
</div>
